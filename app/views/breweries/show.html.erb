<p id="notice"><%= notice %></p>

<h2>
  	<%= @brewery.name %>
</h2>

<p>
  <i>Established in 
  <%= @brewery.year %> </i>
</p>

<p>Number of beers: <%= @brewery.beers.count %></p>



<ul class="list-group">
	<% @brewery.beers.each do |beer| %>
		<li class="list-group-item"><%= beer.name %></li>
	<% end %>
</ul>	


<% if @brewery.ratings.empty? %>
	<p>Beers from this brewery has not yet been rated</p>
<% else %>
    <p> Has <%= pluralize(@brewery.ratings.count, 'rating')%>, average <%= @brewery.average_rating %></p>
<% end %>		

<%= link_to('Edit', edit_brewery_path(@brewery)) if current_user %> 
<%= link_to('Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' }) if current_user %>
