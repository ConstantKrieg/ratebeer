<p id="notice"><%= notice %></p>

<h2>
  <%= @user.username %>
</h2>

<p>
  <strong>Favorite style of <%= @user.username %>: </strong>
  <%= @user.favorite_style %>
</p>


<% if @user.favorite_brewery%>
  <p>
    <strong>Favorite brewery of <%= @user.username %>: </strong>
    <%= @user.favorite_brewery %>
  </p>
<% end %>  

<% if current_user == @user%>
  <p><%= link_to 'Change your password', edit_user_path(@user) %></p>
  <p><%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>  

<div id="beer_clubs">
<h2><%= @user.username%>'s beer clubs</h2>

<ul class="list-group">
  <% @user.beer_clubs.each do |club| %>
    <li class="list-group-item"><%= link_to club, club %></li>
  <% end %>  
</ul>
</div>


<p>has made <%= pluralize(@user.ratings.count, 'rating')%>, average of <%= @user.average_rating %></p>

<div id="ratings">
<h2>ratings</h2>

<ul class="list-group">
  <% @user.ratings.each do |rating| %>
    <li class="list-group-item">
      <%= rating %> 
      <% if @user == current_user%>
        <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %> 
    </li>  
  <% end %>
</ul>

</div>



